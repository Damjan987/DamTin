    }

    .calendar .date {
        padding: 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(25px, 1fr));
        box-sizing: border-box;
    }

    .calendar .date div {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 25px;
        color: #262626;
    }

    .calendar .date div.day {
        font-weight: 700;
    }

